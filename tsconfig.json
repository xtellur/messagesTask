{
  "compilerOptions": {
    "allowJs": true,
    "allowUnusedLabels": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "*": ["types/modules/*"]
    },
    "sourceMap": true,
    "target": "es2017",
    "jsx": "react",
    "module": "commonjs",
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strict": true,
    "outDir": "build/ts",
    "removeComments": true,
    "lib": ["dom", "es2015", "esnext"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "exclude": ["build", "webpack"]
}
